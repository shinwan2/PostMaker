<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.shinwan2.postmaker.domain.model.Post"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_3"
        >

        <TextView
            android:id="@+id/userDisplayNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.user.displayName}"
            android:textSize="@dimen/text_caption"
            tools:text="Monster Hunter"
            />

        <TextView
            android:id="@+id/postContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userDisplayNameTextView"
            android:layout_marginTop="@dimen/spacing_3"
            android:text="@{viewModel.textContent}"
            android:textSize="@dimen/text_body"
            tools:text="Lorem ipsum dolor sit amet"
            />
    </RelativeLayout>
</layout>