<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="my_topActionBarTheme" format="reference" />
    <attr name="my_topActionBarBackground" format="color" />
    <attr name="my_contextActionBarBackground" format="color" />

    <!-- text color based on android text color attributes -->
    <attr name="my_textColorPrimary" format="reference|color" />
    <attr name="my_textColorPrimaryInverse" format="reference|color" />
    <attr name="my_textColorSecondary" format="reference|color" />
    <attr name="my_textColorPrimaryDisableOnly" format="reference|color" />
    <attr name="my_textColorHint" format="reference|color" />
    <attr name="my_textColorHighlight" format="reference|color" />
    <attr name="my_textColorLink" format="reference|color" />

    <attr name="my_editTextTheme" format="reference" />
    <attr name="my_progressBarTheme" format="reference" />

    <declare-styleable name="EmptyStateView">
        <attr name="my_emptyStateViewImage" format="reference" />
        <attr name="my_emptyStateViewText" format="string" />
    </declare-styleable>
    <declare-styleable name="MySwipeRefreshLayout">
        <attr name="my_swipeRefreshIndicatorColor" format="color" />
        <attr name="my_swipeRefreshIndicatorBackground" format="color" />
    </declare-styleable>
</resources>